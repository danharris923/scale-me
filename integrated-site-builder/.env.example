# =========================================
# INTEGRATED SITE BUILDER CONFIGURATION
# =========================================

# AI Model API Keys (Required)
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Existing GCS Server Configuration
# Replace with your actual server IP and port
GCS_SERVER_URL=http://YOUR_SERVER_IP:8000
GCS_SERVER_IP=YOUR_SERVER_IP

# Deployment Configuration
VERCEL_TOKEN=your_vercel_token_here
GCP_PROJECT_ID=your_gcp_project_id

# Outdoor Adventure Site Configuration
SITE_NICHE=outdoor-adventure
SITE_THEME=adventure-optimized
BRAND_NAME=Adventure Gear Pro
TARGET_AUDIENCE=Outdoor enthusiasts, hikers, and campers

# Product Sources (matches your existing server)
PRODUCT_SOURCES=amazon,cabelas
AFFILIATE_PROGRAMS=amazon-associates,cabelas-affiliate

# Site Generation Settings
SITE_TEMPLATE=outdoor-adventure
PRIMARY_COLORS=#2D5016,#8FBC8F,#F5F5DC
CONVERSION_FOCUS=gear-reviews,deal-alerts,seasonal-promotions

# Optional: Google Sheets Integration
GOOGLE_SHEETS_API_KEY=
GOOGLE_SERVICE_ACCOUNT_FILE=

# Monitoring & Analytics
ENABLE_ANALYTICS=true
GOOGLE_ANALYTICS_ID=
HOTJAR_ID=

# Development Settings
DEBUG=false
LOG_LEVEL=INFO
OUTPUT_DIRECTORY=./generated
TEMPLATE_DIRECTORY=./templates